---
// crea un array de links para el nav de la pagina
// el array est√° compuesto por objetos con label y link en cada objeto
const links = [
  { label: "Inicio", link: "/" },
  { label: "Productos", link: "/productos" },
  { label: "Acerca de", link: "/acercade" },
  { label: "404 not found", link: "/404" },
];
---

<header class="py-8 px-4 mx-auto max-w-2xl lg:py-16 lg:px-6">
  <div class="mx-auto text-center mb-8 lg:mb-16">
    <h2 class="mb-4 text-5xl tracking-tight font-extrabold text-white">
      Mi proyecto
    </h2>
    <p class="font-light text-gray-500 sm:text-xl dark:text-gray-400">
      Esta es una pagina para mi proyecto
    </p>
  </div>

  <nav class="flex items-center justify-between flex-wrap bg-neutral-500 p-6 rounded-lg">
    <div class="flex items-center flex-shrink-0 text-white mr-6">
      <span class="font-semibold text-xl tracking-tight">Logo</span>
    </div>
    <div class="block lg:hidden">
      <button
        class="flex items-center px-3 py-2 border rounded text-teal-200 border-teal-400 hover:text-white hover:border-white"
      >
        <svg
          class="fill-current h-3 w-3"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><title>Menu</title><path
            d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path></svg
        >
      </button>
    </div>
    <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
      <div class="text-sm lg:flex-grow">
        <ul class="flex justify-end">
          <!-- En esta parte hacemos un loop entre los elementos del array para crear cada li -->
          <!-- cada li se crea de manera dinamica -->
          {
            links.map((item, index) => (
              <li class="mr-4 px-2 py-1 hover:bg-neutral-600 rounded-lg">
                <a href={item.link} class="text-white hover:text-gray-300">
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </nav>
</header>
